{
  "name": "luct-reporting-backend",
  "version": "1.0.0",
  "description": "LUCT Reporting System Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "psql -U postgres -d luct_reporting -f init-db.sql",
    "create-db": "psql -U postgres -c 'CREATE DATABASE luct_reporting;'",
    "drop-db": "psql -U postgres -c 'DROP DATABASE IF EXISTS luct_reporting;'",
    "reset-db": "npm run drop-db && npm run create-db && npm run init-db",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "luct",
    "reporting",
    "education",
    "management"
  ],
  "author": "LUCT Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}